<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.project.segunfrancis.chopwell">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ChopWellApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.project.segunfrancis.chopwell.presentation.ui.OnBoardingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.segunfrancis.chopwell.presentation.ui.MealListActivity"
            android:parentActivityName="com.project.segunfrancis.chopwell.presentation.ui.CategoryActivity" />
        <activity
            android:name="com.project.segunfrancis.chopwell.presentation.ui.FavoritesActivity"
            android:label="Favorites"
            android:parentActivityName="com.project.segunfrancis.chopwell.presentation.ui.CategoryActivity" />
        <activity
            android:name="com.project.segunfrancis.chopwell.presentation.ui.auth.StartActivity"
            android:theme="@style/FullScreen" />
        <activity
            android:name="com.project.segunfrancis.chopwell.presentation.ui.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.project.segunfrancis.chopwell.presentation.ui.MainActivity"
            android:label="MainActivity" />
        <activity
            android:name="com.project.segunfrancis.chopwell.presentation.ui.CategoryActivity"
            android:label="Chop Well"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>